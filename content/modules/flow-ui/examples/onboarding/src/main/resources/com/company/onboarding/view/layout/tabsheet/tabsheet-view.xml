<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://tabSheetView.title">
    <layout>
        <!-- tag::basics[] -->
        <tabSheet>
            <tab id="tab1" label="Tab One">
                <vbox>
                    <label text="Label One"/>
                    <textField placeholder="Text Field One"/>
                </vbox>
            </tab>
            <tab id="tab2" label="Tab Two">
                <label text="Label Two"/>
            </tab>
            <tab id="tab3" label="Tab Three">
                <label text="Label Three"/>
            </tab>
        </tabSheet>
        <!-- end::basics[] -->

        <!-- tag::tabs-number[] -->
        <tabSheet maxWidth="30em">
            <tab id="tab1" label="Tab One">
                <label text="Label One"/>
            </tab>
            <tab id="tab2" label="Tab Two">
                <label text="Label Two"/>
            </tab>
            <tab id="tab3" label="Tab Three">
                <label text="Label Three"/>
            </tab>
            <tab id="tab4" label="Tab Four">
                <label text="Label Four"/>
            </tab>
            <tab id="tab5" label="Tab Five">
                <label text="Label Five"/>
            </tab>
            <tab id="tab6" label="Tab Six">
                <label text="Label Six"/>
            </tab>
            <tab id="tab7" label="Tab Seven">
                <label text="Label Seven"/>
            </tab>
            <tab id="tab8" label="Tab Eight">
                <label text="Label Eight"/>
            </tab>
            <tab id="tab9" label="Tab Nine">
                <label text="Label Nine"/>
            </tab>
        </tabSheet>
        <!-- end::tabs-number[] -->

        <span id = "contentInfo"/>

        <!-- tag::lazy-loading[] -->
        <tabSheet id="tabSheet">
            <tab id="normalTab" label="Normal Tab">
                <vbox>
                    <textField placeholder="textField"/>
                    <button text="button"/>
                </vbox>
            </tab>
            <tab id="lazyTab" label="Lazy Tab" lazy="true">
                <vbox>
                    <button text="button"/>
                    <textField placeholder="textField"/>
                </vbox>
            </tab>
        </tabSheet>
        <!-- end::lazy-loading[] -->

    </layout>
</view>