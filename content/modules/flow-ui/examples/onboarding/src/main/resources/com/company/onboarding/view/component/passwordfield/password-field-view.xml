<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://passwordFieldView.title">
    <layout>
        <!-- tag::basics[] -->
        <passwordField id="passwordField"
                       label="New password"
                       required="true"
                       clearButtonVisible="true"
                       helperText="Make it strong!">
        </passwordField>
        <button id="createPasswordButton"
                text="Create"/>
        <!-- end::basics[] -->

        <!-- tag::prefix[] -->
        <passwordField>
            <prefix>
                <icon icon="KEY"/>
            </prefix>
        </passwordField>
        <!-- end::prefix[] -->

        <!-- tag::suffix[] -->
        <passwordField>
            <suffix>
                <icon icon="KEY"/>
            </suffix>
        </passwordField>
        <!-- end::suffix[] -->
    </layout>
</view>