<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--suppress XmlUnresolvedReference -->
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:kanban="http://jmix.io/schema/kanban/ui"
      title="msg://kanbanTaskListView.title">
    <data>
        <collection id="kanbanTasksDc"
                    class="com.company.onboarding.entity.KanbanTask">
            <loader id="kanbanTasksDl" readOnly="true">
                <query>
                    <![CDATA[select e from KanbanTask e]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox classNames="buttons-panel">
            <button action="kanban.create"/>
            <button action="kanban.edit"/>
            <button action="kanban.remove"/>
        </hbox>
        <kanban:kanban id="kanban" dataContainer="kanbanTasksDc"
                       width="100%" height="100%">
            <kanban:columns>
                <kanban:column dataField="todo" label="msg://kanban.column.todo.label"/>
                <kanban:column dataField="in-progress" label="msg://kanban.column.in_progress.label"/>
                <kanban:column dataField="verification" label="msg://kanban.column.verification.label"/>
                <kanban:column dataField="done" label="msg://kanban.column.done.label"/>
            </kanban:columns>
            <kanban:actions>
                <kanban:action id="create" type="list_create">
                    <kanban:properties>
                        <kanban:property name="openMode" value="DIALOG"/>
                    </kanban:properties>
                </kanban:action>
                <kanban:action id="edit" type="list_edit">
                    <kanban:properties>
                        <kanban:property name="openMode" value="DIALOG"/>
                    </kanban:properties>
                </kanban:action>
                <kanban:action id="remove" type="list_remove"/>
            </kanban:actions>
        </kanban:kanban>
    </layout>
</view>