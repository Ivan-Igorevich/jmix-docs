<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://progressBarView.title">
    <layout>
        <vbox spacing="true">

            <!-- tag::basics[] -->
            <progressBar value="0.5"/>
            <!-- end::basics[] -->

            <!-- tag::progress-update[] -->
            <progressBar id="progressBar"/>
            <!-- end::progress-update[] -->

            <!-- tag::progress-bar-determinate[] -->
            <progressBar id="determinateMode"/>
            <!-- end::progress-bar-determinate[] -->

            <!-- tag::progress-bar-indeterminate[] -->
            <progressBar id="indeterminateMode" indeterminate="true"/>
            <!-- end::progress-bar-indeterminate[] -->

            <!-- tag::value-range[] -->
            <progressBar min="0" max="10" value="5"/>
            <!-- end::value-range[] -->

            <progressBar id="contrastProgressBar" value="0.75" width="350px" themeNames="contrast"/>
            <progressBar id="errorProgressBar" value="0.4" width="350px" themeNames="error"/>
            <progressBar id="successProgressBar" value="1" width="350px" themeNames="success"/>

        </vbox>
    </layout>
</view>